.topbar-bg{
  width: 100%;
  height: 50rpx;
  text-align: center;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.top-bar {
  width: 70%;
  height: 50rpx;
  display: flex;
  margin: 0 auto;
  font-size: 24rpx;
  font-family: '微软雅黑' '宋体';
  flex-direction: row;
  align-content: center;
}

.top-bar .navbar-item {
  width: 50%;
  height: 40rpx;
  text-align: center;
}

.navbar-item-active{
  font-size: 26rpx;
  font-weight: bold;
  color: red;
}
.navbar-item-active .line {
  width: 70%;
  height: 5rpx;
  margin: 0 auto;
  background-color: red;
  margin-top: 10rpx;
}

swiper {
  height: 700rpx;
  padding-top: 50rpx;
  background-color: #eee;
}

.main{
  width: 80%;
  height: auto;
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  margin-top: 30rpx;
}

.main-item{
  width: 50%;
  text-align: center;
}

.item-top{
  color:gray;
  font-size: 34rpx;
}
.item-bottom{
  margin-top: 20rpx;
  font-weight: bold;
  font-size: 40rpx;
  color: #000;
}