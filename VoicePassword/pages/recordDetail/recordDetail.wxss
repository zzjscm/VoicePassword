/* pages/recordDetail/recordDetail.wxss */

.top {
  background-color: #e4694a;
  width: 100%;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 5rpx solid #fecbbd;
}

.userinfo-nickname {
  color: #fecbbd;
  font-size: 34rpx;
}

.record-text {
  color: white;
  font-size: 40rpx;
  width: 100%;
  height: auto;
  text-align: center;
  margin-top: 30rpx;
}

.record-text image {
  width: 45rpx;
  height: 45rpx;
}

.btn-receive {
  width: 70%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  border-radius: 35rpx;
  margin-top: 40rpx;
}

.btn-on {
  color: #fff;
  background-color: #7fd43e;
}

.btn-off {
  color: #fce6da;
  background-color: #f3af9c;
}

.center-bar {
  display: flex;
  flex-direction: row;
  width: 80%;
  color: #fff;
  font-size: 30rpx;
  margin-top: 35rpx;
  padding-bottom: 25rpx;
  margin-left: 10%;
  margin-right: 10%;
}

.center-bar image {
  width: 30rpx;
  height: 30rpx;
}

.for-cash, .for-transmit {
  width: 25%;
}

.one-more {
  width: 30%;
  margin-left: 10%;
  margin-right: 10%;
}

.bottom{
  width: 100%;
}

.bottom-summary {
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  line-height: 70rpx;
}

.summary {
  width: 80%;
  font-size: 28rpx;
  color: gray;
  margin-left: 30rpx;
}

.complain {
  width: 20%;
  color: #3879d9;
  font-size: 28rpx;
  text-align: center;
}

.success-list {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  margin: 20rpx;
  padding: 20rpx;
  border: 1px solid rgba(200, 200, 200, 0.5);
  border-radius: 10px;
}

.item-head image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 5px;
  flex: none;
}

.item-center {
  display: flex;
  flex-direction: column;
  width: 370rpx;
  margin-left: 15rpx;
  flex: none;
}

.item-center-top {
  display: flex;
  flex-direction: row;
}

.item-center-top image {
  width: 25rpx;
  height: 25rpx;
  margin-left: 10rpx;
}

.item-nickname {
  font-size: 26rpx;
  color: #202020;
}

.item-audio {
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #b2b2b2;
  text-align: left;
  margin-left: 0rpx;
  margin-top: 10rpx;
}

.item-end{
  text-align: right;
  margin-top: 30rpx;
    flex: 1;
}

.item-money{
  font-size: 26rpx;
  color: #202020;
}

.item-time{
  font-size: 24rpx;
  color: #858585;
  margin-top: 5rpx;
}

.bottom-line{
  width: 70%;
  height: 1rpx;
  background-color:rgba(200, 200, 200, 0.5);
  margin: 0 auto;
  margin-top: 50rpx;
}
