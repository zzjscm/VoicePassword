/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.voice {
  padding-top: 50rpx;
  width: 100%;
}

.button-record {
  margin-top: 10rpx;
  width: 80%;
}

.button-play {
  display: inline-block;
  width: 75%;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border: 1px solid rgba(0, 0, 0, 0.2);
  border-color: gainsboro;
  /* background-color: #ddd; */
  border-radius: 5px;
}

.button-hover {
  background-color: 999;
}

.result {
  margin-top: 10rpx;
  width: 80%;
  height: 100rpx;
  flex-direction: row;
}

.result-head {
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
}

.top-bar{
  width: 100%;
  height: 50rpx;
  display: flex;
  margin: 0 auto;
  font-size: 14px;
  font-family: '微软雅黑' '宋体';
  flex-direction: row;
  align-content: center;
  padding-left: 15%;
  padding-right: 15%;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  background-color: #f00;
  color: white;
}

.top-bar .navbar-item{
  width: 14%;
  height: 40rpx; 
}

#navbar-item1{
  margin-left: 14%;
  margin-right: 14%;
}

.navbar-item-active .line{
  width: 100%;
  height: 5rpx;
  background-color: white;
  margin-top: 10rpx;
}